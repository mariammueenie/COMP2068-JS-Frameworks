<h1>Search Definitions</h1>

<form method="GET" action="/definitions/search">
  <input type="text" name="q" placeholder="Search English..." value="{{q}}">
  <button type="submit">Search</button>
</form>

{{#if results.length}}
  <h2>Results</h2>
  <table border="1" cellpadding="6">
    <tr>
      <th>English</th>
      <th>Urdu</th>
      <th>Example</th>

      {{#if isAdmin}}
        <th>Actions</th>
      {{/if}}
    </tr>

    {{#each results}}
      <tr>
        <td>{{this.english}}</td>
        <td>{{this.urdu}}</td>
        <td>{{this.example}}</td>

        {{#if ../isAdmin}}
        <td>
          <a href="/definitions/edit/{{this._id}}">Edit</a> |
          <a href="/definitions/delete/{{this._id}}"
             onclick="return confirm('Delete this?');">Delete</a>
        </td>
        {{/if}}
      </tr>
    {{/each}}

  </table>

{{else}}
  {{#if q}}
    <p>No results found for "{{q}}".</p>
  {{/if}}
{{/if}}

<p><a href="/definitions">Back to all definitions</a></p>
